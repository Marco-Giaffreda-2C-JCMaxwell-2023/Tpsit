<body>

    <div id="container">
        <img id="movingImage"
            src="https://www.tradeshopitalia.com/51286-large_default/pallone-palla-da-calcio-football-misure-e-peso-ufficiali-classico-vintage.jpg"
            alt="Pallone da calcio">
        <div id="timer">0 sec</div>
    </div>

    <button onclick="moveImage('Alto')">Alto</button>
    <button onclick="moveImage('Basso')">Basso</button>
    <button onclick="moveImage('Destra')">Destra</button>
    <button onclick="moveImage('Sinistra')">Sinistra</button>

    <script>
        const movingImage = document.getElementById('movingImage');
        const timerElement = document.getElementById('timer');
        let seconds = 0;
        let timerInterval;

function startTimer() {
    timerInterval = setInterval(function () {
        seconds++;
        timerElement.textContent = `${seconds} sec`;

        if (seconds === 60) {
            clearInterval(timerInterval);
            alert('Il tempo Ã¨ scaduto!');
        }
    }, 1000);
}
        function moveImage(direction) {
            const step = 10;
            let currentLeft = parseInt(getComputedStyle(movingImage).left) || 0;
            let currentTop = parseInt(getComputedStyle(movingImage).top) || 0;

            switch (direction) {
                case 'Alto':
                    movingImage.style.top = `${currentTop - step}px`;
                    break;
                case 'Basso':
                    movingImage.style.top = `${currentTop + step}px`;
                    break;
                case 'Sinistra':
                    movingImage.style.left = `${currentLeft - step}px`;
                    break;
                case 'Destra':
                    movingImage.style.left = `${currentLeft + step}px`;
                    break;
                default:
                    break;
            }
        }

        startTimer();
    </script>

</body>

